<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Permission.MatchParent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Permission.Toolbar"
        android:background="?attr/colorPrimary" />

    <TableLayout style="@style/Permission.MatchParent">

        <TableRow>

            <Button
                android:id="@+id/btn_request_camera"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_camera" />

            <Button
                android:id="@+id/btn_request_contact"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_contact" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_request_location"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_location" />

            <Button
                android:id="@+id/btn_request_calendar"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_calendar" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_request_microphone"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_microphone" />

            <Button
                android:id="@+id/btn_request_storage"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_storage" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_request_phone"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_phone" />

            <Button
                android:id="@+id/btn_request_call_log"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_call_log" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_request_sensors"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_sensors" />

            <Button
                android:id="@+id/btn_request_activity_recognition"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_activity_recognition" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_request_sms"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_sms" />

            <Button
                android:id="@+id/btn_setting"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_setting" />
        </TableRow>

        <TableRow>

            <View style="@style/Permission.Line" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_notification"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_notification" />

            <Button
                android:id="@+id/btn_notification_listener"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_notification_listener" />
        </TableRow>

        <TableRow>

            <View style="@style/Permission.Line" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_install"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_install" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_overlay"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_overlay" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_write_setting"
                style="@style/Permission.Button.Weight.Horizontal"
                android:text="@string/permission_write_setting" />
        </TableRow>
    </TableLayout>

</LinearLayout>